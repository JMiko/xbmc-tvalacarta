<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tvalacarta"
	name="tvalacarta"
	version="2.5"
	provider-name="tvalacarta">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
	<import addon="script.module.elementtree" version="1.2.7"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es">Televisión a la carta</summary>
    <description lang="es">Te permite ver desde XBMC los episodios completos que las cadenas de televisión publican en sus sitios web.</description>
    <summary lang="en">TV on demand (Spanish)</summary>
    <description lang="en">This plugin lets you watch inside XBMC full lenght episodes published on the TV channel websites.</description>
    <platform>all</platform>
  </extension>
</addon>
